from typing import List

class Solution:
    def maxSlidingWindow(self, nums: List[int], k: int) -> List[int]:
        l, r = 0, 1 if k > 1 else 0
        res, windowMax = [], nums[0]

        while r < len(nums):
            windowMax = max(windowMax, nums[r])

            if r - l + 1 == k:
                res.append(windowMax)
                l += 1
                r = l + 1 if k > 1 else l

                if l < len(nums):
                    windowMax = nums[l]
                continue
            
            r += 1

        return res